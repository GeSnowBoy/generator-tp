{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "strict": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,

    "lib": ["ES2019"],
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": false,
    "allowJs": true
  },
  "include": ["src/**/*"],

  "compileOnSave": false
}
